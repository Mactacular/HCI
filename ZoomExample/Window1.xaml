    <Grid Margin="0,0,-60,-109" Width="672">
        <Grid.RowDefinitions>
            <RowDefinition Height="328*" />
            <RowDefinition Height="16*" />
            <RowDefinition Height="403*" />
        </Grid.RowDefinitions>
        <Image x:Name="turk" HorizontalAlignment="Left" Height="233" Margin="40,15,0,0" VerticalAlignment="Top" Width="276" Source="turkey.jpg" RenderTransformOrigin="0.654,0.487"/>
            <ScrollViewer HorizontalAlignment="Left" Height="150" Margin="40,317,0,0" VerticalAlignment="Top" Width="521" VerticalScrollBarVisibility="Hidden" Grid.RowSpan="3">
            <TextBlock Height="148" Name="textBlock1" Text="1) Make Turkey
2) Profit"  Background="White"/>
        </ScrollViewer>
        <Image HorizontalAlignment="Left" Height="23" Margin="441,251,0,0" VerticalAlignment="Top" Width="113" Source="star4.png"/>
