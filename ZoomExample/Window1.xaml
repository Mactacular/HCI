        <ScrollViewer HorizontalAlignment="Left" Height="181" Margin="405,65,0,0" VerticalAlignment="Top" Width="186" VerticalScrollBarVisibility="Hidden">
            <TextBox Height="180" TextWrapping="Wrap" Text="Turkey&#xD;&#xA;Butter&#xD;&#xA;Gravy" Width="184"/>
