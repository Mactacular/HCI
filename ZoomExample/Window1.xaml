<Window x:Class="ZoomExample.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Thanksgiving Turkey" Height="506" Width="607">
    <Grid Margin="0,0,-60,-109">
        <Image HorizontalAlignment="Left" Height="233" Margin="40,15,0,0" VerticalAlignment="Top" Width="276" Source="turkey.jpg" RenderTransformOrigin="0.654,0.487"/>
        <ScrollViewer HorizontalAlignment="Left" Height="150" Margin="40,298,0,0" VerticalAlignment="Top" Width="521">
            <TextBox Height="114" TextWrapping="Wrap" Text="1) Heat Oven&#xD;&#xA;2) Make Turkey" Width="475" TextChanged="TextBox_TextChanged_1"/>
        </ScrollViewer>
        <Image HorizontalAlignment="Left" Height="23" Margin="441,251,0,0" VerticalAlignment="Top" Width="120" Source="star.jpg"/>
        <Label Content="Prep Directions" HorizontalAlignment="Left" Margin="40,277,0,0" VerticalAlignment="Top" Width="100" FontWeight="Bold"/>
        <Label Content="Prep Time: 3 hrs" HorizontalAlignment="Left" Margin="257,248,0,0" VerticalAlignment="Top" Width="106" FontWeight="Bold"/>
        <Label Content="Difficulty: Medium" HorizontalAlignment="Left" Margin="40,246,0,0" VerticalAlignment="Top" Width="123" FontWeight="Bold"/>
        <Label Content="Ingredients" HorizontalAlignment="Left" Margin="441,26,0,0" VerticalAlignment="Top" Width="113" FontWeight="Bold"/>
        <ScrollViewer HorizontalAlignment="Left" Height="181" Margin="405,65,0,0" VerticalAlignment="Top" Width="186">
            <TextBox Height="127" TextWrapping="Wrap" Text="Turkey&#xD;&#xA;Butter&#xD;&#xA;Gravy" Width="120"/>
        </ScrollViewer>
        <Button Content="Annotate" HorizontalAlignment="Left" Margin="466,281,0,0" VerticalAlignment="Top" Width="75"/>

    </Grid>
</Window>
