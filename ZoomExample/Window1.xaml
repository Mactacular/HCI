        <Button Content="Annotate" Name="Annotate1" HorizontalAlignment="Left" Margin="466,281,0,0" VerticalAlignment="Top" Width="75" Click="noteHandler"/>
        <TextBox Height="129" HorizontalAlignment="Left" Margin="40,147,0,0" Name="Notes" VerticalAlignment="Top" Width="514" Visibility="Hidden" Grid.Row="2" />
        <Label Content="Notes" Height="28" HorizontalAlignment="Left" Margin="48,155,0,0" Name="label1" VerticalAlignment="Top" Width="43" Grid.Row="2" />
    </Grid>
</Window>
